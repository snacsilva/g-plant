<p id="notice"><%= notice %></p>

<h1>Corretores</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="row">Nome</th>
      <th scope="row">Cpf</th>
      <th scope="row">Crea</th>
      <th scope="row">Telefone</th>
      <th scope="row" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corretores.each do |corretor| %>
      <tr>
        <td><%= corretor.nome %></td>
        <td><%= corretor.cpf %></td>
        <td><%= corretor.crea %></td>
        <td><%= corretor.telefone %></td>
        <td><%= link_to 'Mostrar', corretor %></td>
        <td><%= link_to 'Editar', edit_corretor_path(corretor) %></td>
        <td><%= link_to 'Destruir', corretor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Corretor', new_corretor_path, class: "btn btn-primary mb-2" %>
