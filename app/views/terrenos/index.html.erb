        <td><%= link_to 'Mostrar', terreno %></td>
        <td><%= link_to 'Editar', edit_terreno_path(terreno) %></td>
        <td><%= link_to 'Destruir', terreno, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
