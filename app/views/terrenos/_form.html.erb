<%= form_with(model: terreno, local: true) do |form| %>
  <% if terreno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(terreno.errors.count, "error") %> prohibited this terreno from being saved:</h2>
      <ul>
      <% terreno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form class="form-group row">
  <div class="field ">
    <%= form.label :name %>
    <%= form.text_field :name,
    class: "form-control"%>
  </div>
  <div class="field">
    <%= form.label :latitude_1 %>
    <%= form.text_field :latitude_1,
    class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :latitude_2 %>
    <%= form.text_field :latitude_2,
    class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :longitude_1 %>
    <%= form.text_field :longitude_1,
    class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :longitude_2 %>
    <%= form.text_field :longitude_2,
    class: "form-control" %>
  </div>
   <div class="field">
    <%= form.label :imagem, 'Imagem terreno' %>
    <%= form.file_field :imagem,
    class: "form-control" %>
  </div>
  <p>
  <div class="actions">
    <button type="submit" name=”commit” class="btn btn-primary mb-2">Criar</button>
  </div>
</form>
<% end %>
