<p id="notice"><%= notice %></p>

<h1>Loteamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Longitude</th>
      <th scope="col">Latitude</th>
      <th scope="col">Terreno</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loteamentos.each do |loteamento| %>
      <tr>
        <td><%= loteamento.name %></td>
        <td><%= loteamento.longitude %></td>
        <td><%= loteamento.latitude %></td>
        <td><%= loteamento.terreno.name %></td>
        <td><%= link_to 'Mostrar', loteamento %></td>
        <td><%= link_to 'Editar', edit_loteamento_path(loteamento) %></td>
        <td><%= link_to 'Destruir', loteamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Loteamento', new_loteamento_path, class: "btn btn-primary mb-2" %>
